doctype html
html(lang="en")
    head
        include partial/header
    body.login
        .contenedor-formulario 
            h1 Crea tu cuenta 
            
            if locals.mensajes 
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                 p= error


            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo
                    label(for="email") Correo 
                    input(type="email" name="email" placeholder="Tu email" required value= email)

                .campo
                    label(for="password") Contraseña 
                    input(type="password" name="password" placeholder="Tu contraseña" required value= password)
               
                .campo.enviar
                     input.boton(type="submit" value="Crear Cuenta")

                .campo 
                    a(href="/iniciar-sesion") Volver a iniciar sesion 
        script(src="/dist/bundle.js")             